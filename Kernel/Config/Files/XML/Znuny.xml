    -->
    <Setting Name="Ticket::Frontend::MenuModule###999-TicketToUnitTest" Required="0" Valid="0">
        <Description Translatable="1">Shows a link in the menu to create a unit test for the current ticket.</Description>
        <Navigation>Frontend::Agent::View::TicketZoom::MenuModule</Navigation>
        <Value>
            <Hash>
                <Item Key="Module">Kernel::Output::HTML::TicketMenu::Generic</Item>
                <Item Key="Group">rw:admin</Item>
                <Item Key="Name" Translatable="1">Create a unit test file</Item>
                <Item Key="Description" Translatable="1">Creates a unit test file for this ticket.</Item>
                <Item Key="Action"></Item>
                <Item Key="Link">Action=AgentTicketToUnitTest;Subaction=CreateFile;TicketID=[% Data.TicketID | html %]</Item>
                <Item Key="Target"></Item>
                <Item Key="PopupType"></Item>
                <Item Key="ClusterName" Translatable="1">Miscellaneous</Item>
                <Item Key="ClusterPriority">998</Item>
            </Hash>
        </Value>
    </Setting>
    <Setting Name="Ticket::Frontend::MenuModule###999-TicketToUnitTestSend" Required="0" Valid="0">
